<h1> Add Recipe </h1>

<form method="POST" action="/recipe/add">

    <div class="form-group">
        <label>What's on the menu?</label>
        <input type="text" name="dish" class="form-control">
    </div>

    <div class="form-group">
        <label>Add ingrediants</label>
        <input type="text" name="Ingrediants" class="form-control">
    </div>

    <div class="form-group">
        <label>About the recipe</label>
        <input type="text" name="aboutrecipe" class="form-control">
    </div>

    <div class="form-group">
        <label>Author</label>
        <select name="author[]" multiple="multiple" class="form-control">
            <% authors.forEach(function(author){ %>
            
                <option value="<%= author._id %>"><%= author.name %></option>
            
            <% }) %>
        </select>
    </div>
    
    <br>
    <button type="submit" class="btn btn-dark">Create Recipe</button>

</form>