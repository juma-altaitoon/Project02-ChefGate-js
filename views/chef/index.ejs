<h1> Add Article </h1>

<form method="POST" action="/recipe/add">

    <div class="form-group">
        <label>Cooking</label>
        <input type="text" name="cooking" class="form-control">
    </div>

    <div class="form-group">
        <label>Ingrediants</label>
        <input type="text" name="ingrediants" class="form-control">
    </div>

    <div class="form-group">
        <label>Author</label>
        <select name="author[]" multiple="multiple" class="form-control">
            <% authors.forEach(function(author){ %>
            
                <option value="<%= author._id %>"><%= author.name %></option>
            
            <% }) %>
        </select>
    </div>
    
    <br>
    <button type="submit" class="btn btn-primary">Create Article</button>

</form>