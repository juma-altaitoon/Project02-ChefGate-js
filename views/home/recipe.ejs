<h1> Add Recipe </h1>

<form method="POST" action="/recipe/add">
    <label for="recipe">Choose a catagory:</label>
    <select id="catagory" name="catagory">
      <option value="breakfast">Breakfast</option>
      <option value="lunch">Lunch</option>
      <option value="dinner">Dinner</option>
      <option value="appitizer">Appitizer</option>
      <option value="dessert">Dessert</option>
      <option value="beverage">Beverage</option>
    </select>
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="form-control">
    </div>

    <div class="form-group">
        <label>Email Address</label>
        <input type="text" name="emailAddress" class="form-control">
    </div>

    <br>
    <button type="submit" class="btn btn-Success">Create Recipe</button>
</form>
